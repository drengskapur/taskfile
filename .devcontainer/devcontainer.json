{
    "name": "Taskfile",
    "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
	"postCreateCommand": "curl -sL https://taskfile.dev/install.sh | sh -s -- -d -b /usr/local/bin",
    "customizations": {
        "vscode": {
            "extensions": [
                "mutantdino.resourcemonitor",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "redhat.vscode-yaml",
                "task.vscode-task"
            ],
            "settings": {
                "workbench.sideBar.location": "right",
                "workbench.colorTheme": "Default Dark Modern",
                "editor.formatOnSave": true
            }
        }
    }
}