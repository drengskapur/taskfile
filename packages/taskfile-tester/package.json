{
  "name": "@drengskapur/taskfile-tester",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "task -d ./src workflows:generate",
    "build:image": "docker buildx bake -f ./src/docker-bake.hcl --push",
    "generate": "task -d ./src workflows:generate",
    "update:readme": "task -d ./src readme:update",
    "test": "act -C ../.. -W ../../.github/workflows/test-go.yml",
    "test:all": "for f in ../../.github/workflows/test-*.yml; do act -C ../.. -W $f; done"
  }
}
